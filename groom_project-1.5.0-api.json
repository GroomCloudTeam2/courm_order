{
  "openapi": "3.0.3",
  "info": {
    "title": "E-Commerce Platform API",
    "description": "사용자 시나리오(회원가입 → 상품 조회 → 장바구니 → 주문 → 리뷰) 중심 API 명세",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://virtserver.swaggerhub.com/boxty/user_shipment/1.0.0",
      "description": "SwaggerHub API Auto Mocking"
    },
    {
      "url": "https://virtserver.swaggerhub.com/noo-9d0/groom_project/1.0.0",
      "description": "SwaggerHub API Auto Mocking"
    },
    {
      "url": "http://localhost:8080/api/v1",
      "description": "Local / Production Server"
    }
  ],
  "security": [
    {
      "BearerAuth": []
    }
  ],
  "tags": [
    {
      "name": "Auth"
    },
    {
      "name": "User"
    },
    {
      "name": "Product"
    },
    {
      "name": "Cart"
    },
    {
      "name": "Order"
    },
    {
      "name": "Review"
    }
  ],
  "paths": {
    "/auth/signup": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "회원가입",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SignupRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "가입 성공"
          }
        },
        "security": []
      }
    },
    "/auth/login": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "로그인",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "로그인 성공"
          },
          "403": {
            "description": "로그인 거부"
          }
        },
        "security": []
      }
    },
    "/auth/logout": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "로그아웃",
        "responses": {
          "200": {
            "description": "로그아웃 성공"
          }
        }
      }
    },
    "/users/me": {
      "get": {
        "tags": [
          "User"
        ],
        "summary": "내 정보 조회",
        "responses": {
          "200": {
            "description": "조회 성공",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserResponse"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "User"
        ],
        "summary": "회원 탈퇴",
        "responses": {
          "204": {
            "description": "탈퇴 완료"
          }
        }
      },
      "patch": {
        "tags": [
          "User"
        ],
        "summary": "내 정보 수정",
        "responses": {
          "200": {
            "description": "수정 성공"
          }
        }
      }
    },
    "/categories": {
      "get": {
        "tags": [
          "Product"
        ],
        "summary": "카테고리 조회",
        "parameters": [
          {
            "name": "parentId",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "카테고리 목록"
          }
        }
      }
    },
    "/products": {
      "get": {
        "tags": [
          "Product"
        ],
        "summary": "상품 목록 조회",
        "parameters": [
          {
            "name": "categoryId",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "상품 목록"
          }
        }
      }
    },
    "/products/{productId}": {
      "get": {
        "tags": [
          "Product"
        ],
        "summary": "상품 상세 조회",
        "parameters": [
          {
            "name": "productId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "상품 상세",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProductResponse"
                }
              }
            }
          }
        }
      }
    },
    "/cart/items": {
      "post": {
        "tags": [
          "Cart"
        ],
        "summary": "장바구니 담기",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CartItemRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "추가 성공"
          }
        }
      }
    },
    "/cart/items/{cartItemId}": {
      "delete": {
        "tags": [
          "Cart"
        ],
        "summary": "장바구니 삭제",
        "parameters": [
          {
            "name": "cartItemId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "삭제 성공"
          }
        }
      },
      "patch": {
        "tags": [
          "Cart"
        ],
        "summary": "수량 변경",
        "parameters": [
          {
            "name": "cartItemId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/items_cartItemId_body"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "변경 성공"
          }
        }
      }
    },
    "/orders": {
      "get": {
        "tags": [
          "Order"
        ],
        "summary": "내 주문 목록 조회",
        "responses": {
          "200": {
            "description": "주문 목록",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/OrderResponse"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Order"
        ],
        "summary": "주문 생성",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/OrderCreateRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "주문 생성 완료"
          }
        }
      }
    },
    "/orders/{orderId}": {
      "get": {
        "tags": [
          "Order"
        ],
        "summary": "주문 상세 조회",
        "parameters": [
          {
            "name": "orderId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "주문 상세",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/OrderResponse"
                }
              }
            }
          }
        }
      }
    },
    "/reviews": {
      "post": {
        "tags": [
          "Review"
        ],
        "summary": "리뷰 작성",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ReviewRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "리뷰 작성 완료",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ReviewResponse"
                }
              }
            }
          },
          "400": {
            "description": "잘못된 요청"
          },
          "403": {
            "description": "권한 없음"
          },
          "404": {
            "description": "주문 또는 상품을 찾을 수 없음"
          }
        }
      }
    },
    "/reviews/{reviewId}": {
      "delete": {
        "tags": [
          "Review"
        ],
        "summary": "리뷰 삭제",
        "parameters": [
          {
            "name": "reviewId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "리뷰 삭제 완료"
          },
          "403": {
            "description": "본인의 리뷰가 아님"
          },
          "404": {
            "description": "리뷰를 찾을 수 없음"
          }
        }
      },
      "patch": {
        "tags": [
          "Review"
        ],
        "summary": "리뷰 수정",
        "parameters": [
          {
            "name": "reviewId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ReviewUpdateRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "리뷰 수정 완료",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ReviewResponse"
                }
              }
            }
          },
          "403": {
            "description": "본인의 리뷰가 아님"
          },
          "404": {
            "description": "리뷰를 찾을 수 없음"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "UserRole": {
        "type": "string",
        "enum": [
          "USER",
          "OWNER"
        ]
      },
      "ProductStatus": {
        "type": "string",
        "enum": [
          "ON_SALE",
          "SOLD_OUT",
          "HIDDEN"
        ]
      },
      "OrderStatus": {
        "type": "string",
        "enum": [
          "PENDING",
          "PAID",
          "PREPARING",
          "SHIPPING",
          "DELIVERED",
          "CONFIRMED",
          "CANCELLED"
        ]
      },
      "ShippingStatus": {
        "type": "string",
        "enum": [
          "READY",
          "SHIPPING",
          "DONE"
        ]
      },
      "PaymentMethod": {
        "type": "string",
        "enum": [
          "CARD",
          "BANK_TRANSFER",
          "EASY_PAY"
        ]
      },
      "SignupRequest": {
        "required": [
          "email",
          "nickname",
          "password",
          "role"
        ],
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "format": "email"
          },
          "password": {
            "type": "string",
            "format": "password"
          },
          "nickname": {
            "type": "string"
          },
          "role": {
            "$ref": "#/components/schemas/UserRole"
          },
          "store_name": {
            "type": "string"
          }
        }
      },
      "LoginRequest": {
        "required": [
          "email",
          "password"
        ],
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "CartItemRequest": {
        "required": [
          "productId",
          "quantity"
        ],
        "type": "object",
        "properties": {
          "productId": {
            "type": "string",
            "format": "uuid"
          },
          "optionId": {
            "type": "string",
            "format": "uuid",
            "nullable": true
          },
          "quantity": {
            "minimum": 1,
            "type": "integer"
          }
        }
      },
      "OrderCreateRequest": {
        "required": [
          "addressId",
          "items",
          "paymentMethod"
        ],
        "type": "object",
        "properties": {
          "addressId": {
            "type": "string",
            "format": "uuid"
          },
          "paymentMethod": {
            "$ref": "#/components/schemas/PaymentMethod"
          },
          "items": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/OrderCreateRequest_items"
            }
          }
        }
      },
      "ReviewRequest": {
        "required": [
          "orderId",
          "productId",
          "rating"
        ],
        "type": "object",
        "properties": {
          "orderId": {
            "type": "string",
            "format": "uuid"
          },
          "productId": {
            "type": "string",
            "format": "uuid"
          },
          "rating": {
            "maximum": 5,
            "minimum": 1,
            "type": "integer"
          },
          "content": {
            "type": "string"
          }
        }
      },
      "ReviewUpdateRequest": {
        "type": "object",
        "properties": {
          "rating": {
            "maximum": 5,
            "minimum": 1,
            "type": "integer"
          },
          "content": {
            "type": "string"
          }
        }
      },
      "UserResponse": {
        "type": "object",
        "properties": {
          "userId": {
            "type": "string",
            "format": "uuid"
          },
          "email": {
            "type": "string"
          },
          "nickname": {
            "type": "string"
          },
          "role": {
            "$ref": "#/components/schemas/UserRole"
          }
        }
      },
      "ProductResponse": {
        "type": "object",
        "properties": {
          "productId": {
            "type": "string",
            "format": "uuid"
          },
          "categoryId": {
            "type": "string",
            "format": "uuid"
          },
          "title": {
            "type": "string"
          },
          "price": {
            "type": "integer"
          },
          "stockQuantity": {
            "type": "integer"
          },
          "status": {
            "$ref": "#/components/schemas/ProductStatus"
          },
          "options": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ProductResponse_options"
            }
          }
        }
      },
      "OrderResponse": {
        "type": "object",
        "properties": {
          "orderId": {
            "type": "string",
            "format": "uuid"
          },
          "orderStatus": {
            "$ref": "#/components/schemas/OrderStatus"
          },
          "shippingStatus": {
            "$ref": "#/components/schemas/ShippingStatus"
          },
          "totalAmount": {
            "type": "integer"
          }
        }
      },
      "ReviewResponse": {
        "type": "object",
        "properties": {
          "reviewId": {
            "type": "string",
            "format": "uuid"
          },
          "orderId": {
            "type": "string",
            "format": "uuid"
          },
          "productId": {
            "type": "string",
            "format": "uuid"
          },
          "userId": {
            "type": "string",
            "format": "uuid"
          },
          "rating": {
            "type": "integer"
          },
          "content": {
            "type": "string"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "items_cartItemId_body": {
        "type": "object",
        "properties": {
          "quantity": {
            "type": "integer"
          }
        }
      },
      "OrderCreateRequest_items": {
        "required": [
          "productId",
          "quantity"
        ],
        "type": "object",
        "properties": {
          "productId": {
            "type": "string",
            "format": "uuid"
          },
          "optionId": {
            "type": "string",
            "format": "uuid",
            "nullable": true
          },
          "quantity": {
            "minimum": 1,
            "type": "integer"
          }
        }
      },
      "ProductResponse_options": {
        "type": "object",
        "properties": {
          "optionId": {
            "type": "string",
            "format": "uuid"
          },
          "name": {
            "type": "string"
          },
          "value": {
            "type": "string"
          }
        }
      }
    },
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
